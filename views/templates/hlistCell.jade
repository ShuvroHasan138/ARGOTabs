div.hlist.inline
  div(ng-repeat='hlo in model', class='moveable-{{reorders && edit && model.length > 1}}').inline.item.valign-middle
    div(class='enabled-{{edit}}').item-controls.valign-middle
      i(ng-click='remove($index)').icon-remove-sign.highlight-button
    div(ng-transclude).inline.valign-middle
    span(ng-show='!$last') {{separator}}&nbsp;
  .inline.valign-middle
    a(ng-click='add()', class='pre-space-{{!!model.length}}', href='', tabindex=0).dont-print.unstyled-link.valign-middle
      i.icon-plus-sign.highlight-button
    i(ng-click='edit = !edit', ng-show='model.length && (!editHidden || edit)', class='edit-{{edit}}').icon-edit-sign.highlight-button.dont-print.edit-button.pre-space.valign-middle

    width: 30%
  #round-judges-table th:nth-child(5)
    width: 10%
    
  #round-teams-table th:nth-child(1)
    width: 15px
  #round-teams-table th:nth-child(2)
    width: 10%
  #round-teams-table th:nth-child(3)
    width: 40%
  #round-teams-table th:nth-child(3)
    width: 40%

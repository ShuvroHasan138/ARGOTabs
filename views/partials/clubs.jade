h3.print-only.text-center {{ui.tournament.name}} - Clubs
table(editable-table, model='ui.tournament.clubs', add-item='addClub()', removeItem='removeClub(index)')#clubs-table
  thead
    tr
      th #
      th
        sort-arrow(model='ui.tournament.clubs', sort-by='o.name') Name
      th
        sort-arrow(model='ui.tournament.clubs', sort-by='o.teams.length') # Teams
  tbody(editable-tbody, add-item-label='Add club')
    script(type='text/html')
      td {{$index + 1}} 
      td 
        div(text-edit-cell, text-edit-bind="o.name")
      td
        | {{o.teams.length}}

:stylus
  #clubs-table th:first-child
    width: 35px
  #clubs-table th:nth-child(2)
    width: 70%

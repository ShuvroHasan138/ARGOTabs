div(id=o.id, class=o.cssClass).modal
  .modal-header
    if o.closeable
      button(type="button", data-dismiss="modal", aria-hidden="true").close.modal-cancel &times;
    h3.modal-title
  .modal-body
  if o.buttons.length
    .modal-footer
      each button, i in o.buttons
        a(class="#{(i == o.cancelButtonIndex)?'modal-cancel ':''}#{(i == o.primaryButtonIndex)?'btn-primary ':''}", data-count="#{i}").btn.modal-button #{button}

  if o.width 
    style.
      @media (min-width: 767px) {
        ##{o.id} {
          width: #{o.width}px;
          margin-left: #{-o.width / 2}px;
        }
      }
  if o.height
    style.
      @media (min-width: 767px) {
        ##{o.id} {
          margin-top: #{-o.height/ 2}px;
        }
        ##{o.id} .modal-body {
          max-height: #{o.height - 80 - (o.buttons.length ? 60 : 0)}px;
        }
      }
  style.
    @media (min-width: 767px) {
      .modal.fade {
        top: 20px;
      }

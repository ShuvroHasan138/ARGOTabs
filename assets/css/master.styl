@import '../components/bootstrap/css/bootstrap.css'
@import '../components/bootstrap/css/bootstrap-responsive.css'
@import '../components/font-awesome/css/font-awesome.css'

.sidebar-nav
  padding: 9px 0;

body
  padding-top: 60px;

@media (max-width: 980px)
  body
    padding-top: 0px;
  .loading-screen
    top: 0px

@media screen
  .print-only
    display: none !important

@media print
  .dont-print
    display: none !important
  .print-full-width
    width: 100% !important
    margin: auto !important

.loading-screen
  width: 200%
  height: 200%
  top: -50%
  left: -50%
  background: #333333
  position: fixed
  overflow: hidden
  z-index: 10000
  display: table
  vertical-align: middle

.loading-screen h3
  display: table-cell
  text-align: center
  font-size: 200%
  vertical-align: middle
  color: #fff
  text-shadow: 0px 2px 3px #000

#open-modal.modal
  transition: transform 0.3s, opacity 0.3s linear, top 0.3s ease-out
  -webkit-transition: -webkit-transform 0.3s, opacity 0.3s linear, top 0.3s ease-out

#open-modal.dropbox
  transform: scale(1.2)

.hidden-true
  display: none !important

.textedit-input
  margin: 0px !important

.multi-input
  margin: 0px !important

.sortarrow i
  display: none

th:hover .sortarrow i, .sortarrow:hover i
  opacity: 0.5
  display: inline-block

.multi-label.null-true
  opacity: 0.5

.text-center
  text-align: center

.editable-table td.controls, 
.editable-table th.controls
  width: 15px
  vertical-align: middle
.editable-table .controls i
  font-size: 130%
.editable-table td
  vertical-align: middle

.auto-width
  width: auto
.a-width
  width: auto !important

.highlight-button
  opacity: 0.2

.highlight-button:hover
  opacity: 0.5

.highlight-button.edit-true
  opacity: 0.6

.highlight-button.edit-true:hover
  opacity: 0.8

.hlist .item-controls
  transition: width 0.3s
  width: 0px
  overflow: hidden
  display: inline-block
  cursor: default

.hlist .item-controls.enabled-true
  width: 15px

.hlist .item.moveable-true
  cursor: move

.inline
  display: inline-block

.valign-middle
  vertical-align: middle

.pre-space
  margin-left: 3px

.pre-space-true
  margin-left: 3px

a.unstyled-link
  color: #000
a.unstyled-link:hover
  text-decoration: none
